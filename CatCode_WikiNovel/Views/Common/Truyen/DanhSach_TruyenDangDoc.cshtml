@using CatCode_WikiNovel.Controllers
@using WowSQL
@using WowCore
@using System.Data
@model Dictionary<string,object>
@{


    var truyenDangDoc = Model != null && Model.ContainsKey("truyen-dang-doc") ? (string)Model["truyen-dang-doc"] : string.Empty;
    if (string.IsNullOrEmpty(truyenDangDoc))
    {
        return;
    }
    var dt = Methods.GetSettingProcedure("sp_DanhSach_TruyenDangDoc", "@lstId", truyenDangDoc);
    if (dt.Rows.Count == 0)
    {
        return;
    }
}

<div id="DanhSach_HienThi_TrangChu" class="col-lg-12">
    <div class="iq-card iq-card-block iq-card-stretch iq-card-height">
        @{
            await Html.RenderPartialAsync(@"..\TitleCard.cshtml", new Dictionary<string, object>(){
        {"icon","ri-heart-fill"},
        {"title","Truyện đang đọc"},
        });
        }
        <div class="iq-card-body">
            <div class="row">
                @foreach (DataRow drItem in dt.Rows)
                {
                    await Html.RenderPartialAsync(@"..\ItemCard.cshtml", new Dictionary<string, object>() { { "drItem", drItem }, });
                }
            </div>
        </div>
    </div>
</div>